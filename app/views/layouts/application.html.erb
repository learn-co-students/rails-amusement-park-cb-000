<!DOCTYPE html>
<html>
  <head>
    <title>Amusement Park</title>
    <%= csrf_meta_tags %>
    <%= analytics_init if Rails.env.production? %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>
  </head>
  <body>
    <!--  navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <ul class="nav navbar-nav">
            <%= link_to "Home", root_url, class: "navbar-brand" %>
            <% if current_user %>
              <%= link_to "Hello, #{current_user.name}!", user_path(current_user.id) %>
              <%= link_to "Attractions", attractions_path, class: "navbar-brand" %>
              <%= link_to "Log Out", signout_path, :method => :delete %>
            <% else %>
              <%= link_to "Sign Up", new_user_path, class: "navbar-brand" %>
              <%= link_to "Sign In", signin_path, class: "navbar-brand" %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container"  role="main">
      <%= yield %>
    </div>

  </body>
</html>