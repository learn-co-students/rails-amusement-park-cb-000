<h1>Ride: <%= @attraction.name %></h1>

<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path, html: { class: "btn btn-primary" } %>
<% end %>

<%= form_for @ride, url: rides_new_path  do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :attraction_id, value: @attraction.id %>
  <%= f.submit "Go on this ride" %>
<% end %>
